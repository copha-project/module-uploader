{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "ES5",
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["*","src/types/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/render/**/*"
  ]
}
